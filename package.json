{
	"name": "nostrum",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"relay:up": "docker compose up -d nostr-relay",
		"relay:down": "docker compose down",
		"relay:logs": "docker compose logs -f nostr-relay",
		"relay:reset": "docker compose down -v && docker compose up -d nostr-relay",
		"relay:seed": "tsx scripts/seed-local-relay.ts"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/node": "^25.2.1",
		"@types/ws": "^8.18.1",
		"fake-indexeddb": "^6.2.5",
		"nostr-tools": "^2.23.0",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"ws": "^8.19.0"
	},
	"dependencies": {
		"@lucide/svelte": "^0.563.1",
		"@tailwindcss/vite": "^4.1.18",
		"dexie": "^4.3.0",
		"svelte-sonner": "^1.0.7",
		"tailwindcss": "^4.1.18"
	}
}
